<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/background_activated">

    <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/crime_list_item_solved_check_box"
            android:gravity="center"
            android:focusable="false"
            android:enabled="false"
            android:padding="4dp" android:layout_alignBottom="@+id/crime_list_item_date_text_view"
            android:layout_alignParentTop="true" android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_crime"
            android:id="@+id/crime_list_item_title_text_view"
            android:layout_toLeftOf="@id/crime_list_item_solved_check_box"
            android:layout_toStartOf="@id/crime_list_item_solved_check_box"
            android:paddingLeft="4dp"
            android:paddingRight="4dp" android:textStyle="bold"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/date_crime"
            android:id="@+id/crime_list_item_date_text_view"
            android:layout_below="@id/crime_list_item_title_text_view"
            android:layout_toLeftOf="@id/crime_list_item_solved_check_box"
            android:layout_toStartOf="@id/crime_list_item_solved_check_box"
            android:paddingLeft="4dp"
            android:paddingTop="4dp"
            android:paddingRight="4dp" android:textStyle="bold"/>
</RelativeLayout>